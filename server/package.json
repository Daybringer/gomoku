    "@nestjs/serve-static": "^2.2.2",
    "@nestjs/typeorm": "^8.0.3",
    "@nestjs/websockets": "^8.4.4",
    "@sendgrid/mail": "^7.6.2",
    "base64url": "^3.0.1",
    "bcrypt": "^5.0.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "dotenv": "^8.2.0",
    "express-rate-limiter": "^1.3.1",
    "gomoku-game": "^0.0.7",
    "google-auth-library": "^8.0.2",
    "handlebars": "^4.7.7",
    "mongoose": "^7.3.2",
    "nodemailer": "^6.5.0",
