{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "commonjs",
    // "rootDir": "src",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    // "strictNullChecks": true,
    "noImplicitAny": false,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "gomoku-shared-types/": ["src/shared/types"],
      "gomoku-constants/": ["src/share/constants"]
    }
  }
}
